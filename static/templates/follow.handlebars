<div class="column {{#if custom_size}}{{custom_size}}{{else}}is-half{{/if}}">
    <div class="card">
        <div class="card-content">
            <div class="media">
            <div class="media-left">
                <figure class="image is-48x48">
                    <a href="/user/{{github_username}}">
                        <img src="https://avatars.githubusercontent.com/{{github_username}}" alt="Placeholder image">
                    </a>
                </figure>
            </div>
            <div class="media-content">
                <a href="/user/{{github_username}}" class="title is-5">
                {{ full_name }}
                </a>
                {{#unless is_me}}
                {{#if following}}
                    <a data-user-id="{{ id }}" class="button is-light is-pulled-right following">Following</a>
                {{else}}
                    <a data-user-id="{{ id }}" class="button is-dark is-pulled-right follow">Follow</a>
                {{/if}}
                {{/unless}}
                <a class="subtitle is-6" href="/user/{{github_username}}">@{{ github_username }}</a>
            </div>
            </div>
            
            <div class="content">
            {{#if bio}}
                {{ bio }}
            {{/if}}
            <br>
            {{#each topics}}
                <span class="tag is-light">{{ display_name }}</span>
            {{/each}}
            </div>
        </div>
    </div>
</div>
